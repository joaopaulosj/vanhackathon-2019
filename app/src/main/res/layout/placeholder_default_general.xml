<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/horizontal_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemDefaultIconIv"
        android:layout_width="@dimen/placeholder_default_icon_size"
        android:layout_height="@dimen/placeholder_default_icon_size"
        android:scaleType="fitCenter"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemDefaultTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family_black"
        android:gravity="center"
        android:padding="@dimen/horizontal_margin"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/placeholder_default_text_message"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/itemDefaultLabelTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/horizontal_margin"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/placeholder_default_text_message"
        tools:lines="2"
        tools:text="@tools:sample/lorem/random" />

    <br.com.joaopaulosj.vanhackathon2019.ui.widget.ProgressButton
        android:id="@+id/itemDefaultBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_white"
        app:backgroundTint="@color/colorPrimary"
        app:btnBackground="@color/colorPrimary"
        app:btnText="@string/placeholder_error_button_label"
        />

</LinearLayout>